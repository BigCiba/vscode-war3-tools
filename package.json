{
  "name": "vscode-war3-tools",
  "displayName": "月之底war3工具",
  "description": "月之底war3工具",
  "version": "0.0.5",
  "icon": "images/logo.png",
  "publisher": "bigciba",
  "engines": {
    "vscode": "^1.72.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "war3-tools.excel_to_lua",
        "title": "Excel转lua"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "%pluginName%",
      "properties": {
        "war3-tools.A1.listener": {
          "scope": "resource",
          "type": "object",
          "default": {
            "ability_excel": false,
            "unit_excel": false
          },
          "properties": {
            "ability_excel": {
              "type": "boolean",
              "default": false,
              "description": "监听双行excel变更自动生成lua"
            },
            "unit_excel": {
              "type": "boolean",
              "default": false,
              "description": "监听单行excel变更自动生成lua"
            }
          },
          "additionalProperties": false,
          "markdownDescription": "监听文件变更相关设置。"
        },
        "war3-tools.A2.AbilityExcel": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          },
          "markdownDescription": "双行excel表路径配置\n- lua路径对应excel路径\n- 可填写具体文件名也可以填写文件夹\n- 可以使用相对当前工作区的相对路径"
        },
        "war3-tools.A2.UnitExcel": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          },
          "markdownDescription": "单行excel表路径配置\n- lua路径对应excel路径\n- 可填写具体文件名也可以填写文件夹\n- 可以使用相对当前工作区的相对路径"
        }
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/BigCiba/vscode-war3-tools.git"
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.72.0",
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.38.1",
    "@typescript-eslint/parser": "^5.38.1",
    "eslint": "^8.24.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.8.4",
    "ts-loader": "^9.4.1",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0",
    "@vscode/test-electron": "^2.1.5"
  },
  "dependencies": {
    "node-watch": "^0.7.3"
  }
}
